    ></script>
  </head>
  <body>
    <%- include('../partials/_header') %>
    <main class="container">
      <h1 class="display-5 text-center py-5">New URL ðŸ”—</h1>
      <form class="d-flex flex-column" method="POST" action="/urls">
        <div class="mb-3">
          <label for="longURL" class="form-label">Long URL</label>
          <input
            type="url"
            class="form-control"
            id="longURL"
            aria-describedby="longURLHelp"
            name="longURL"
            required
          />
          <div id="longURLHelp" class="form-text">
            Here it goes your long URL! Make sure it starts with "http"
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>
  </body>
